<controls:MetroWindow x:Class="Broadcaster.UI.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      xmlns:ui="clr-namespace:Broadcaster.UI"
                      Title="{Binding ProgramVersion,Mode=OneWay}" SnapsToDevicePixels="True" BorderThickness="0"
                      GlowBrush="{StaticResource AccentColorBrush}" TitleCharacterCasing="Normal"
                      Height="500" Width="700"  TextElement.Foreground="{DynamicResource MaterialDesignBody}" TextElement.FontWeight="Regular"
                      TextElement.FontSize="13" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto" Background="{DynamicResource MaterialDesignPaper}"
                      FontFamily="{StaticResource MaterialDesignFont}">
    <!--<ui:WindowWrapper></ui:WindowWrapper>-->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <ContentPresenter Content="{Binding CurrentDataContext}" />
    </Grid>

</controls:MetroWindow>

